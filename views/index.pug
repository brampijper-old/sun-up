html
	head
		link( href="materialize/css/materialize.min.css" type="text/css" rel="stylesheet")
		link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
		link( href='css/style.css' type='text/css' rel='stylesheet')
		link( href='css/sun.css' type='text/css' rel='stylesheet')
	body
		div.col.s12.m12.l12.header
			//- h1.center-align Take a quick break and enjoy the sun!
			img(id='cloud1' src='')
			//- div.register-msg.center-align
			//- 	h4= message
			.container-sun
				svg.svg-sun(version='1.1', viewbox='0 0 100 100', preserveaspectratio='xMinYMin meet')
					circle#sun(cx='50', cy='50', r='35')
		div.container
			div.row
				div.col.s12.m12.l12.card-container
					div.card.register-card
						ul.tabs.teal
							li.tab.col.s6
								a.white-text.active(href="#login") Login
							li.tab.col.s6
								a.white-text.active(href="#register") Register

						div.card-content.black-text#login
							h6.center-align.red-text= message
							div.container
								form(action='/login' method='post' autocomplete='off')
									div.col.s12.m12.l12.input-field
										input(type='email' name='email' autocomplete='on' placeholder='your@email.com' class="validate" required)
										label.black-text(for='email') Your email adress *
									div.col.s12.m12.l12.input-field
										input(name='password' autocomplete='on' placeholder='Your password' type='password' class="validate" required)
										label.black-text(for='password') Your Password *
									div.col.s12.m12.l12.input-field.center-align
										input(type='submit' class="btn small-button" id='submitLogin' value='Login')


						div.card-content.black-text#register
							div.container
								form(action='/register' method='post' autocomplete='off')
									div.col.s12.m12.l6.input-field
										input(name='email' type='email' autocomplete='on' placeholder='your@emailaddress.com')
										label.black-text(for='email') Your Email address *

									div.col.s12.m12.l6.input-field
										input(name='password' type='password' autocomplete='on' placeholder='Ultra secure password' min-length = '1' class='validate' required)
										label.black-text(for='password') Your Password *

									div.col.s12.m12.l6.input-field
										input#inputAdress(name='adress' autocomplete='on' type='text' placeholder='Your address' class='validate' onchange='setupBaseURL()')
										label.black-text(for='adress') Your adress *

										p
											label.black-text(for='loc')
												input(type='radio' name='loc' id='loc' value='loc')
												span Use Current location
											p#locationField
										//- label(for='adress') typ in your adress (for example: your work-location)
										input(type="hidden" id="lat" name="lat" value="")
										input(type="hidden" id="lng" name="lng" value="")
										input(type="hidden" id="city" name="city" value="")
									br
									div.col.s12.m12.l12.input-field
										p.test How do you want to receive notifications? *
										p
											label.black-text(for='email')
												input(type='radio' name='medium' id ='email' value='email' required)
												span An email

										//- p
										//- 	label.black-text(for='textmsg')
										//- 		input(type='radio' name='medium' id='textmsg' value='textmsg' required) 
										//- 		span A text message 

									//- div.col.s12.m12.l6.input-field
									//- 	input(name='phonenumber' type='number' id='phonenumber' placeholder='Phone Number' class='validate' style='display:none; width:40%;' required)
										//- input(type='submit' class='verify' value='Verify' id='verify' style='display:none;')

									div.col.s12.m12.l12.input-field
										input(name='frequency' type='number' max='5' min='1' placeholder='Maximum of 5 messages a day' class='validate' required)
										label.black-text(for='frequency') Amount of messages a day? *
									div.col.s12.m12.l12
										h6 On which of the following days do you want to receive a message?
									div.col.checkboxHolder
										label.black-text(for='everyday')
											input(type='checkbox' name='everyday' id='everyday')
											span Everyday
										label.black-text(for='monday')
											input(type='checkbox' name='day' id ='monday' value='monday' class='daygroup')
											span Monday
										label.black-text(for='tuesday')
											input(type='checkbox' name='day' id='tuesday' value='tuesday' class='daygroup')
											span Tuesday
										label.black-text(for='wednesday')
											input(type='checkbox' name='day' id='wednesday' value='wednesday' class='daygroup') 
											span Wednesday
										label.black-text(for='thursday')
											input(type='checkbox' name='day' id ='thursday' value='thursday' class='daygroup')
											span Thursday
										label.black-text(for='friday')
											input(type='checkbox' name='day' id='friday' value='friday' class='daygroup')
											span Friday
										label.black-text(for='saturday')
											input(type='checkbox' name='day' id='saturday' value='saturday' class='daygroup')
											span Saturday 
										label.black-text(for='sunday')
											input(type='checkbox' name='day' id='sunday' value='sunday' class='daygroup')
											span Sunday
											br
											br 
									div.col.s12.m12.l12
										div.button-holder.center-align
											button(class="btn waves effect waves-light" type="submit" value="Register" id='submit')
												| Submit
		main
		include includes/footer